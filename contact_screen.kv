<ContactWindow>:
    id: contact_tab
    icon: "account-tie"

    MDTextField:
        id: user_tf
        icon_left: "account"
        hint_text: app.load_lang("hint_text","user_tf")
        pos_hint: {'x':0.01,'y':0.85}
        size_hint: 0.25,None

    MDTextField:
        id: company_tf
        icon_left: "domain"
        hint_text: app.load_lang("hint_text","company_tf")
        pos_hint: {'x':0.01,'y':0.75}
        size_hint: 0.25,None

    MDTextField:
        id: email_tf
        icon_left: "email"
        hint_text: app.load_lang("hint_text","email_tf")
        pos_hint: {'x':0.01,'y':0.65}
        size_hint: 0.3,None

    MDLabel:
        id: themes_title_lb
        text: app.load_lang("text","themes_title_lb")
        pos_hint: {'x': 0.03,'y': 0.1}
        font_style: "H6"

    MDRectangleFlatButton:
        id: save_changes_btn
        text: app.load_lang("text","save_changes_btn")
        pos_hint: {'x': 0.8,'y': 0.05}
        on_press:root.save_changes()

    GridLayout:
        id: check_layout
        cols: 2
        rows: 3
        size_hint: .13,.1
        pos_hint: {'center_x': .1, 'center_y': .5}

        MDLabel:
            id: light_theme_lb
            text: app.load_lang("text","light_theme_lb")

        MDCheckbox:
            id: light_theme_check
            allow_no_selection: False
            group: "theme"
            size_hint: None,None
            size: "25dp", "25dp"
            on_press: root.switch_themes("1")
            on_active: root.ui_flag = True

        MDLabel:
            id: dark_theme_lb
            text: app.load_lang("text","dark_theme_lb")

        MDCheckbox:
            id: dark_theme_check
            allow_no_selection: False
            group: "theme"
            size_hint: None,None
            size: "25dp", "25dp"
            on_press: root.switch_themes("2")
            on_active: root.ui_flag = True

        MDLabel:
            id: dark_purple_theme_lb
            text: app.load_lang("text","dark_purple_theme_lb")

        MDCheckbox:
            id: dark_purple_theme_check
            allow_no_selection: False
            group: "theme"
            size_hint: None,None
            size: "25dp", "25dp"
            on_press: root.switch_themes("3")

    FloatLayout:
        id: lang_list_layout
        pos_hint: {'x': 0.4, 'y': 0.5}
        size_hint:0.3,0.25

        MDLabel:
            id: lang_select_lb
            text: app.load_lang("text","lang_select_lb")
            pos_hint:{'x': 0,'y': 0.5}
            font_style: "H6"
            theme_text_color: "Custom"
            text_color: app.label_color()

        MDScrollView:
            id: lang_scroll_view
            size_hint:1,0.7
            pos_hint:{'x': 0,'y': 0.3}
            MDList:
                id:lang_list
                OneLineIconListItem:
                    text:"English (US)"
                    on_press: app.write_to_json("assets\\meta_data.json",[["user_data","lang","en-us"]])
                    IconLeftWidget:
                        icon: "assets\\icons\\us-flag.png"
                OneLineIconListItem:
                    text:"German (Deutschland)"
                    on_press: app.write_to_json("assets\\meta_data.json",[["user_data","lang","de"]])
                    IconLeftWidget:
                        icon: "assets\\icons\\de-flag.png"
