<AppMainScreen>:
    id: advance_packager
    icon: "package-variant"

    MDTextField:
        id: bug_title_tf
        hint_text: "Bug Title"
        helper_text: "Write the main issue title"
        helper_text_mode: "on_focus"
        pos_hint: {'x': 0.02, 'y': 0.7}
        size_hint: 0.3, None

    MDTextField:
        id: bug_msg_tf
        hint_text: "Bug Text"
        helper_text: "Write more details about the issues"
        helper_text_mode: "on_focus"
        multiline: True
        pos_hint: {'x': 0.02, 'y': 0.05}
        size_hint: 0.6, None
        font_size: 16

    MDTextField:
        id: sw_directory_tf
        hint_text: "Spotweld Main Directory"
        pos_hint: {'x': 0.02, 'y': 0.9}
        size_hint: 0.3,None
        text : root.software_dir
        readonly: True

    ToolTipIcon:
        id: sw_directory_alert
        icon: "alert"
        size_hint:None,None
        theme_text_color: "Custom"
        text_color: 212 / 255, 34 / 255, 34 / 255, 1
        pos_hint: {'x': 0.35, 'y': 0.93}
        tooltip_text: "SpotWeld was not found in the directory!"


    MDTextField:
        id: zip_directory_tf
        hint_text: "Zip Output Directory"
        pos_hint: {'x': 0.02, 'y': 0.8}
        size_hint: 0.3, None
        text: root.output_dir
        readonly: True

    MDLabel:
        id: version_lab
        text: "SW version: "
        pos_hint: {'x': 0.65, 'y': 0.74}
        size_hint: 0.3, None

    MDLabel:
        id: sw_sub_lab
        text: "SW Type: "
        pos_hint: {'x': 0.65, 'y': 0.78}
        size_hint: 0.25, None

    FloatLayout:
        id: item_list_layout
        pos_hint: {'x': 0.65, 'y': 0.45}
        size_hint:0.3,0.3

        MDLabel:
            text: "Files included"
            pos_hint:{'x': 0,'y': 0.5}
            font_style: "H6"

        MDScrollView:
            size_hint:1,0.65
            pos_hint:{'x': 0,'y': 0.3}
            id: item_scroll_view
            MDList:
                id: run_item_list


        MDRectangleFlatButton:
            id: list_add_btn
            text:"Add"
            size_hint:0.5,0.1
            pos_hint: {'x':0,'y':0}
            on_press:root.add_item_popup()

        MDRectangleFlatIconButton:
            id: list_remove_btn
            text: "Remove"
            size_hint:0.5,0.1
            pos_hint: {'x':0.5,'y':0}
            icon: "radiobox-blank"
            on_press:root.remove_item_from_list()


    FloatLayout:
        id: img_list_layout
        pos_hint: {'x': 0.65, 'y': 0.1}
        size_hint:0.3,0.25

        MDLabel:
            text: "attach Images"
            pos_hint:{'x': 0,'y': 0.5}
            font_style: "H6"

        MDScrollView:
            id: img_scroll_view
            size_hint:1,0.65
            pos_hint:{'x': 0,'y': 0.3}
            MDList:
                id:run_img_list

        MDRectangleFlatButton:
            id: list_img_add_btn
            text:"Add"
            size_hint:0.5,0.1
            pos_hint: {'x':0,'y':0}
            on_press:root.add_img()

        MDRectangleFlatIconButton:
            id: list_img_remove_btn
            text: "Remove"
            size_hint:0.5,0.1
            pos_hint: {'x':0.5,'y':0}
            icon: "radiobox-blank"
            on_press:root.remove_img_from_list()

    ToolTipIcon:
        id: zip_directory_alert
        icon: "alert"
        theme_text_color: "Custom"
        text_color: 212 / 255, 34 / 255, 34 / 255, 1
        pos_hint: {'x': 0.35, 'y': 0.83}
        size_hint:None,None
        tooltip_text: "Directory is empty!"

    MDRectangleFlatButton:
        id: sw_directory_btn
        text: "Choose directory"
        pos_hint: {'x': 0.4, 'y': 0.92}
        on_press: root.spotweld_dir_choose("1")

    MDRectangleFlatButton:
        id: zip_directory_btn
        text: "Choose directory"
        pos_hint: {'x': 0.4, 'y': 0.82}
        on_press: root.spotweld_dir_choose("2")


    MDRectangleFlatButton:
        id: send_data_btn
        text: "send"
        pos_hint: {'x': 0.9, 'y': 0.01}
        on_press: root.send_data()

    MDSwitch:
        id: advance_switch
        width: dp(40)
        pos_hint: {'x': .65,'y': .9}
        thumb_color_inactive: "grey"
        active: True
        on_active: root.remove_advance(self.active)

    MDLabel:
        id: advance_switch_label
        text: "Advance Mode"
        pos_hint: {'x': .73,'y': .445}